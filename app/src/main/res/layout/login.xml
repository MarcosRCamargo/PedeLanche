<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="71dp"
        android:layout_marginTop="116dp"
        android:id="@+id/edUserName"
        android:singleLine="true"
        android:hint="Nome de UsuÃ¡rio" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/edUserName"
        android:layout_alignStart="@+id/edUserName"
        android:layout_marginTop="58dp"
        android:id="@+id/edPassword"
        android:hint="Digite sua senha" />

    <Button
        android:id="@+id/btLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edPassword"
        android:layout_below="@+id/edPassword"
        android:layout_marginStart="59dp"
        android:layout_marginTop="93dp"
        android:text="Entrar" />

    <CheckBox
        android:text="Lembrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edPassword"
        android:layout_alignStart="@+id/edPassword"
        android:layout_marginTop="35dp"
        android:id="@+id/ckLembrar" />

    <TextView
        android:id="@+id/tvCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ckLembrar"
        android:layout_alignBottom="@+id/ckLembrar"
        android:layout_alignEnd="@+id/edPassword"
        android:layout_marginEnd="21dp"
        android:clickable="true"
        android:text="Criar Conta" />
</RelativeLayout>
